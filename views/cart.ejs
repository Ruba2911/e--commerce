<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Shopping Cart - Elegant Store</title>
  <link rel="stylesheet" href="/css/style.css">
</head>
<body>
  <nav>
    <div class="nav-container">
      <a href="/" class="logo">‚ú® Elegant Store</a>
      <ul class="nav-links">
        <li><a href="/">Home</a></li>
        <li><a href="/products">Products</a></li>
        <% if (user) { %>
          <li><a href="/wishlist">‚ù§Ô∏è Wishlist</a></li>
          <li><a href="/orders/my-orders">My Orders</a></li>
          <li><a href="/auth/logout">Logout (<%= user.username %>)</a></li>
        <% } else { %>
          <li><a href="/auth/login">Login</a></li>
          <li><a href="/auth/register">Register</a></li>
        <% } %>
        <li>
          <a href="/cart" class="cart-icon">
            üõí
            <% if (cart && cart.length > 0) { %>
              <span class="cart-count"><%= cart.length %></span>
            <% } %>
          </a>
        </li>
      </ul>
    </div>
  </nav>

  <div class="container">
    <h1 style="font-size: 2.5rem; margin-bottom: 2rem; color: var(--primary);">Shopping Cart</h1>

    <% if (cart.length === 0) { %>
      <div class="empty-state">
        <h2>Your cart is empty</h2>
        <p>Add some amazing products to get started!</p>
        <a href="/products" class="btn btn-primary">Browse Products</a>
      </div>
    <% } else { %>
      <div class="cart-items">
        <% cart.forEach(item => { %>
          <div class="cart-item">
            <img src="<%= item.image %>" alt="<%= item.name %>" class="cart-item-image">
            <div class="cart-item-info">
              <h3><%= item.name %></h3>
              <p class="cart-item-price">$<%= item.price.toFixed(2) %></p>
            </div>
            <div class="quantity-selector">
              <input type="number" value="<%= item.quantity %>" min="1" 
                     onchange="updateCart(<%= item.id %>, this.value)">
            </div>
            <div>
              <p style="font-size: 1.3rem; font-weight: bold; color: var(--secondary);">
                $<%= (item.price * item.quantity).toFixed(2) %>
              </p>
              <button onclick="removeFromCart(<%= item.id %>)" 
                      style="background: var(--accent); color: white; border: none; padding: 0.5rem 1rem; border-radius: 5px; cursor: pointer; margin-top: 0.5rem;">
                Remove
              </button>
            </div>
          </div>
        <% }); %>
      </div>

      <div class="cart-summary">
        <div class="cart-total">
          <span>Total:</span>
          <span>$<%= cart.reduce((sum, item) => sum + (item.price * item.quantity), 0).toFixed(2) %></span>
        </div>
        <% if (user) { %>
          <a href="/orders/checkout" class="btn btn-success" style="width: 100%; text-align: center; padding: 1.2rem; font-size: 1.1rem;">
            Proceed to Checkout
          </a>
        <% } else { %>
          <p style="text-align: center; margin-bottom: 1rem; color: #7f8c8d;">Please login to checkout</p>
          <a href="/auth/login" class="btn btn-primary" style="width: 100%; text-align: center; padding: 1.2rem; font-size: 1.1rem;">
            Login to Checkout
          </a>
        <% } %>
      </div>
    <% } %>
  </div>

  <footer>
    <p>&copy; 2024 Elegant Store. All rights reserved. | Premium Quality Products</p>
  </footer>

  <script src="/js/main.js"></script>
</body>
</html>
