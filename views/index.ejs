<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Home - Elegant Store</title>
  <link rel="stylesheet" href="/css/style.css">
</head>
<body>
  <nav>
    <div class="nav-container">
      <a href="/" class="logo">‚ú® Elegant Store</a>
      <ul class="nav-links">
        <li><a href="/">Home</a></li>
        <li><a href="/products">Products</a></li>
        <% if (user) { %>
          <li><a href="/wishlist">‚ù§Ô∏è Wishlist</a></li>
          <li><a href="/orders/my-orders">My Orders</a></li>
          <li><a href="/auth/logout">Logout (<%= user.username %>)</a></li>
        <% } else { %>
          <li><a href="/auth/login">Login</a></li>
          <li><a href="/auth/register">Register</a></li>
        <% } %>
        <li>
          <a href="/cart" class="cart-icon">
            üõí
            <% if (cart && cart.length > 0) { %>
              <span class="cart-count"><%= cart.length %></span>
            <% } %>
          </a>
        </li>
      </ul>
    </div>
  </nav>

  <section class="hero">
    <h1>Welcome to Elegant Store</h1>
    <p>Discover premium products with exceptional quality and style</p>
    <a href="/products" class="btn">üõçÔ∏è Shop Now</a>
  </section>

  <div class="container">
    <div class="section-header fade-in">
      <h2 class="section-title">Featured Products</h2>
      <p class="section-subtitle">Handpicked selection of our best-selling items</p>
    </div>
    
    <div class="products-grid">
      <% products.forEach(product => { %>
        <div class="product-card fade-in">
          <div class="product-image-container">
            <% if (user) { %>
              <button class="wishlist-btn" onclick="toggleWishlist(<%= product.id %>, this)" data-product-id="<%= product.id %>">
                ‚ù§Ô∏è
              </button>
            <% } %>
            <% if (product.stock < 20) { %>
              <span class="product-badge">Low Stock!</span>
            <% } %>
            <img src="<%= product.image %>" alt="<%= product.name %>" class="product-image" loading="lazy">
          </div>
          <div class="product-info">
            <span class="product-category"><%= product.category %></span>
            <h3 class="product-name"><%= product.name %></h3>
            <p class="product-description"><%= product.description %></p>
            <div class="product-price">$<%= product.price.toFixed(2) %></div>
            <p class="product-stock <%= product.stock < 20 ? 'low' : '' %>">
              <%= product.stock %> in stock
            </p>
            <div class="product-actions">
              <a href="/products/<%= product.id %>" class="btn-icon btn-primary" style="flex: 1; text-align: center; justify-content: center;">
                üëÅÔ∏è View Details
              </a>
              <button onclick="quickShare(<%= product.id %>, '<%= product.name.replace(/'/g, "\\'") %>', <%= product.price %>)" 
                      class="btn-icon btn-outline" style="padding: 0.9rem; width: 50px; justify-content: center;" title="Share">
                üîó
              </button>
            </div>
          </div>
        </div>
      <% }); %>
    </div>

    <div style="text-align: center; margin-top: 4rem;">
      <a href="/products" class="btn btn-primary" style="padding: 1.2rem 3rem; font-size: 1.1rem;">
        üîç View All Products
      </a>
    </div>
  </div>

  <footer>
    <p>&copy; 2024 Elegant Store. All rights reserved. | Premium Quality Products</p>
  </footer>

  <!-- Quick Share Modal -->
  <div id="quickShareModal" class="modal">
    <div class="modal-content" style="max-width: 500px;">
      <span class="close-modal" onclick="closeQuickShare()">&times;</span>
      <div style="padding: 2rem;">
        <h2 style="margin-bottom: 1.5rem; color: var(--primary);">üì§ Share Product</h2>
        
        <div id="shareProductInfo" style="background: var(--light); padding: 1rem; border-radius: 10px; margin-bottom: 1.5rem;"></div>

        <div class="form-group">
          <label style="font-weight: bold; margin-bottom: 0.5rem; display: block;">Product Link:</label>
          <div style="display: flex; gap: 0.5rem;">
            <input type="text" id="quickShareLink" readonly style="flex: 1; padding: 1rem; border: 2px solid var(--secondary); border-radius: 10px; font-size: 1rem;">
            <button onclick="copyQuickLink()" class="btn btn-primary" style="padding: 1rem 2rem;">
              üìã Copy
            </button>
          </div>
          <p id="quickCopyStatus" style="color: var(--success); margin-top: 0.5rem; font-weight: bold; display: none;">‚úÖ Copied!</p>
        </div>

        <div style="margin-top: 1.5rem;">
          <div style="display: grid; grid-template-columns: repeat(2, 1fr); gap: 1rem;">
            <button onclick="quickShareWhatsApp()" class="btn btn-success" style="display: flex; align-items: center; justify-content: center; gap: 0.5rem;">
              üì± WhatsApp
            </button>
            <button onclick="quickShareEmail()" class="btn btn-primary" style="display: flex; align-items: center; justify-content: center; gap: 0.5rem;">
              üìß Email
            </button>
          </div>
        </div>
      </div>
    </div>
  </div>

  <script>
    let currentShareData = {};

    function quickShare(productId, productName, productPrice) {
      currentShareData = {
        id: productId,
        name: productName,
        price: productPrice,
        url: `http://localhost:3000/products/${productId}`
      };

      document.getElementById('shareProductInfo').innerHTML = `
        <h3 style="color: var(--primary); margin-bottom: 0.5rem;">${productName}</h3>
        <p style="color: var(--secondary); font-weight: bold; font-size: 1.2rem;">$${productPrice.toFixed(2)}</p>
      `;
      
      document.getElementById('quickShareLink').value = currentShareData.url;
      document.getElementById('quickShareModal').style.display = 'block';
    }

    function closeQuickShare() {
      document.getElementById('quickShareModal').style.display = 'none';
      document.getElementById('quickCopyStatus').style.display = 'none';
    }

    function copyQuickLink() {
      const linkInput = document.getElementById('quickShareLink');
      linkInput.select();
      navigator.clipboard.writeText(linkInput.value).then(() => {
        const status = document.getElementById('quickCopyStatus');
        status.style.display = 'block';
        setTimeout(() => status.style.display = 'none', 3000);
      });
    }

    function quickShareWhatsApp() {
      const text = `Check out: ${currentShareData.name} - $${currentShareData.price}\n${currentShareData.url}`;
      window.open(`https://wa.me/?text=${encodeURIComponent(text)}`, '_blank');
    }

    function quickShareEmail() {
      const subject = `Check out: ${currentShareData.name}`;
      const body = `I found this product!\n\n${currentShareData.name}\nPrice: $${currentShareData.price}\n\nView it here: ${currentShareData.url}`;
      window.location.href = `mailto:?subject=${encodeURIComponent(subject)}&body=${encodeURIComponent(body)}`;
    }

    window.onclick = function(event) {
      const modal = document.getElementById('quickShareModal');
      if (event.target == modal) {
        closeQuickShare();
      }
    }
  </script>

  <script src="/js/main.js"></script>
</body>
</html>
